{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build server",
      "command": "make",
      "options": {
        "cwd": "${workspaceRoot}/server"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "build client",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceRoot}/client"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "args": ["QUIET=0"],
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
